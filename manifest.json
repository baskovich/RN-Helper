{
	"manifest_version": 2,
	"name": "Rail Nation Helper",
	"description": "Rail Nation Helper",
	"version": "0.1",
    "author": "Timur Ignatiev (onfolcpd@gmail.com)",
    "content_scripts": [{
        "matches": [ "http://*.railnation.ru/*" ],
        "js": [
            "assets/libs/jquery/jquery-2.1.1.min.js",
            "main.js"
        ]
    }],
    "web_accessible_resources": [
        "assets/*"
    ],
	"icons": {
		"16": "assets/images/icons/16x16.png",
		"32": "assets/images/icons/32x32.png",
		"48": "assets/images/icons/48x48.png",
		"64": "assets/images/icons/64x64.png",
		"128": "assets/images/icons/128x128.png"
	},
	"permissions": [
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "webNavigation",
        "management",
        "http://*/*",
        "https://*/*"
	],
	"browser_action": {
		"default_title": "Rail Nation Helper",
		"default_icon": "assets/images/icons/48x48.png"
	}
}
